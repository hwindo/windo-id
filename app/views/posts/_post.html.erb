<article id="<%= dom_id post %>" class="w-full sm:w-auto my-5 space-y-5">
  <div class="flex flex-col justify-between items-center text-center gap-2">
    <h1 class="text-4xl font-bold w-9/12">
      <%= post.title %> <%= post.draft? ? "(draft)" : "" %>
    </h1>
    <div>
      <%= post.created_at.strftime("%B %d, %Y") %>
    </div>
    <% if post.tag_names.present? %>
      <div class="flex flex-wrap justify-center gap-2">
        <% post.tag_names.each do |tag| %>
          <span class="inline-block bg-blue-100 p-2 px-4 rounded-full text-blue-800 text-sm font-semibold mr-2 py-0.5">
            <%= tag %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= image_tag post.featured_image if post.featured_image.attached? %>
  <div class="prose lg:prose-xl prose-zinc mx-auto">
    <%= post.content %>
  </div>
</article>
