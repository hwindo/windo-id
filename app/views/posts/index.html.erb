<% content_for :title, "Posts" %>
<div class="w-full mt-6">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl">Blog</h1>
    <% if authenticated? %>
      <%= link_to new_post_path, class: "rounded-md p-2 border hover:text-white hover:bg-blue-600 hover:bg-blue-500 block" do %>
        <i data-lucide="plus" class="w-5 h-5 font-bold"></i>
      <% end %>
    <% end %>
  </div>
  <div id="posts" class="min-w-full ">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <%= render "post_row", post: post %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No posts found.</p>
    <% end %>
  </div>
</div>
