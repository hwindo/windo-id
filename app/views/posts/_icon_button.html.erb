<% if local_assigns[:method] == :delete %>
  <%# Button %>
  <%= button_to path, method: method, form_class: "sm:inline-block ml-2", class: "w-full rounded-md p-2.5 border text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: local_assigns[:data] do %>
    <i data-lucide="<%= icon %>" class="w-5 h-5"></i>
  <% end %>
<% else %>
  <%# Link %>
  <%= link_to path, class: "rounded-md p-2 border hover:text-white hover:bg-blue-600 block" do %>
    <i data-lucide="<%= icon %>" class="w-5 h-5 font-bold"></i>
  <% end %>
<% end %>

