<style>
  .glitch-text {
    position: relative;
    transition: all 0.3s ease;
  }

  .glitch-text:hover {
    animation: glitch 0.3s forwards;
  }

  .glitch-loop {
    animation: glitch-loop 5s infinite;
  }

  @keyframes glitch {
    0% {
      text-shadow:
        2px 0 #ff0000,
        -2px 0 #00ff00,
        4px 0 #0000ff;
      transform: skew(1deg);
    }
    25% {
      text-shadow:
        -2px 0 #ff0000,
        2px 0 #00ff00,
        -4px 0 #0000ff;
      transform: skew(-1deg);
    }
    50% {
      text-shadow:
        3px 0 #ff0000,
        -3px 0 #00ff00,
        6px 0 #0000ff;
      transform: skew(2deg);
    }
    75% {
      text-shadow:
        -3px 0 #ff0000,
        3px 0 #00ff00,
        -6px 0 #0000ff;
      transform: skew(-2deg);
    }
    100% {
      text-shadow: none;
      transform: none;
    }
  }

  @keyframes glitch-loop {
    0% {
      text-shadow: none;
      transform: none;
    }
    2% {
      text-shadow:
        3px 0 #ff0000,
        -3px 0 #00ff00,
        6px 0 #0000ff;
      transform: skew(2deg);
    }
    4% {
      text-shadow:
        -3px 0 #ff0000,
        3px 0 #00ff00,
        -6px 0 #0000ff;
      transform: skew(-2deg);
    }
    6% {
      text-shadow: none;
      transform: none;
    }
    98% {
      text-shadow: none;
      transform: none;
    }
    100% {
      text-shadow: none;
      transform: none;
    }
  }
</style>
